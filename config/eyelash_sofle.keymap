#define ZMK_POINTING_DEFAULT_MOVE_VAL 1200  // 600
#define ZMK_POINTING_DEFAULT_SCRL_VAL 25   // 10

#include <input/processors.dtsi>
#include <zephyr/dt-bindings/input/input-event-codes.h>
#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/outputs.h>
#include <dt-bindings/zmk/pointing.h>
#include <dt-bindings/zmk/rgb.h>

&mmv_input_listener { input-processors = <&zip_xy_scaler 2 1>; };

&msc_input_listener { input-processors = <&zip_scroll_scaler 2 1>; };

&msc {
    acceleration-exponent = <1>;      // 0
    time-to-max-speed-ms = <100>;       // 300
    delay-ms = <0>;                   // 0
};

&mmv {
    time-to-max-speed-ms = <500>;
    acceleration-exponent = <1>;
    trigger-period-ms = <16>;
};

&soft_off { hold-time-ms = <2000>; };

/ {
    scroll_encoder: scroll_encoder {
        compatible = "zmk,behavior-sensor-rotate";
        #sensor-binding-cells = <0>;
        bindings = <&msc SCRL_DOWN>, <&msc SCRL_UP>;

        tap-ms = <100>;
    };

    behaviors {
    };

    combos {
        compatible = "zmk,combos";

        softoff {
            bindings = <&soft_off>;
            key-positions = <14 28 40>;
        };

        /* simple combos (avoid macros) */
        combo_semicolon {
            timeout-ms = <30>;
            key-positions = <29 30>;  // , + .
            bindings = <&kp SEMI>;
        };
        /* undo: sends 'u' (Neovim undo) */
        combo_undo {
            timeout-ms = <30>;
            key-positions = <10 11>;  // A + S
            bindings = <&kp U>;
        };
        /* redo: send 'r' (redo in some mappings; if you use Ctrl+R frequently,
           we can enable macros / mod combos later) */
        combo_redo {
            timeout-ms = <30>;
            key-positions = <1 2>;    // W + E
            bindings = <&kp R>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        /****************************************************************
         * LAYER 0 — BASE (QWERTY) with Home-Row Mods using &mt (mod-tap)
         * Note: &mt MOD KEY => tap: KEY, hold: MOD (supported in ZMK)
         ****************************************************************/
        layer0 {
            bindings = <
/* row 0 (top) */
&kp ESC     &kp Q      &kp W      &kp E      &kp R      &kp T       &kp Y       &kp U      &kp I      &kp O      &kp P      &kp LBRC   &kp RBRC
/* row 1 (home) */
&kp TAB     &mt LCTRL A &mt LALT S &mt LGUI D &mt LSHFT F &kp G       &kp H       &mt RSHFT J &mt RGUI K &mt RALT L &mt RCTRL SCLN &kp APOSTROP &kp BSLH
/* row 2 (lower) */
&kp LSHIFT  &kp Z      &kp X      &kp C      &kp V      &kp B       &kp N       &kp M      &kp COMMA  &kp DOT    &kp SLASH  &kp ENTER  &kp BSPC
/* thumb row */
&kp C_MUTE  &kp LCTRL  &kp LEFT_GUI &kp LEFT_ALT &mo 1  &kp SPACE   &kp ENTER   &kp SPACE  &mo 2  &kp RIGHT_ALT &kp RIGHT_GUI &kp RIGHT_CTRL &kp DELETE
            >;

            /* preserve original sensor/enc bindings */
            sensor-bindings = <&inc_dec_kp C_VOLUME_UP C_VOL_DN>;
            display-name = "LAYER0";
        };

        /****************************************************************
         * LAYER 1 — SYMBOLS (activated by MO 1)
         * (contains most punctuation used in programming)
         ****************************************************************/
        layer_1 {
            bindings = <
/* row 0 */
&kp GRAVE  &kp EXCL &kp AT   &kp HASH  &kp DLLR  &kp PRCNT &kp CARET &kp AMPS  &kp STAR  &kp LPAR  &kp RPAR  &kp UNDERSCORE &trans
/* row 1 */
&trans     &kp TILDE &kp PIPE &kp LT    &kp GT   &kp QMARK &kp COLON &kp SEMI &kp DQT &kp SQT &kp LBRC  &kp RBRC &kp BSLH
/* row 2 */
&trans     &kp PLUS  &kp MINUS &kp EQUAL &kp SLASH &kp BACKSLASH &kp PIPE &kp LESS &kp GREATER &kp QUESTION &kp AT &kp HASH &trans
/* thumb */
&kp C_MUTE &trans &trans &trans &trans &trans &trans &trans &trans &trans &trans &trans &trans
            >;

            display-name = "layer1";
            sensor-bindings = <&scroll_encoder>;
        };

        /****************************************************************
         * LAYER 2 — NUMBERS (activated by MO 2)
         ****************************************************************/
        layer_2 {
            bindings = <
/* row 0 */
&kp TILDE  &kp N1     &kp N2    &kp N3    &kp N4   &kp N5   &kp N6   &kp N7   &kp N8   &kp N9    &kp N0   &kp MINUS &kp EQUAL
/* row 1 */
&trans     &kp KP_7   &kp KP_8  &kp KP_9  &kp KP_PLUS &kp KP_MULT &kp KP_4 &kp KP_5 &kp KP_6 &kp KP_MINUS &kp KP_DIV &kp KP_1 &kp KP_2
/* row 2 */
&trans     &kp KP_0   &kp KP_DOT &kp KP_ENTER &kp KP_PLUS &kp KP_MULT &trans &trans &trans &trans &trans &trans &trans
/* thumb */
&trans &trans &trans &trans &trans &trans &trans &trans &trans &trans &trans &trans &trans
            >;

            display-name = "layer2";
            sensor-bindings = <&scroll_encoder>;
        };

        /****************************************************************
         * LAYER 3 — NAVIGATION & EDITING
         ****************************************************************/
        layer_3 {
            bindings = <
/* row 0 */
&kp ESC  &kp HOME  &kp PG_UP  &kp END  &kp F5  &kp F6  &kp LEFT_ARROW &kp DOWN_ARROW &kp UP_ARROW &kp RIGHT_ARROW &kp INSERT &kp PRINT &trans
/* row 1 */
&kp TAB  &kp LEFT  &kp DOWN  &kp UP  &kp RIGHT &kp PG_DN &kp DEL &kp BSPC &kp RET &kp SAVE &kp UNDO &kp REDO &trans
/* row 2 */
&trans &trans &trans &trans &trans &trans &trans &trans &trans &trans &trans &trans &trans
/* thumb */
&trans &trans &trans &trans &trans &trans &trans &trans &trans &trans &trans &trans &trans
            >;

            display-name = "layer3";
            sensor-bindings = <&scroll_encoder>;
        };

        /****************************************************************
         * LAYER 4 — SYSTEM (keeps your original system bindings)
         ****************************************************************/
        layer_4 {
            bindings = <
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans
            >;
         display-name = "layer4";
            sensor-bindings = <&scroll_encoder>;
        };
    };
};
